<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/xiaomi_background_color">

    <include layout="@layout/toolbar"
        android:id="@+id/include2" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_device"
        android:id="@+id/imageView3"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/include2"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/space_features_title"
        android:textSize="20sp"
        android:id="@+id/spaceNameView"
        android:paddingStart="@dimen/fragment_text_start_padding"
        android:paddingEnd="@dimen/fragment_text_end_padding"
        android:layout_below="@+id/imageView3"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/listView"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:paddingStart="@dimen/fragment_text_start_padding"
        android:paddingEnd="@dimen/fragment_text_end_padding"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/spaceNameView"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/proceedButton" />
    <Button
        android:layout_width="match_parent"
        android:text="@string/next"
        android:id="@+id/proceedButton"
        style="@style/Xiaomi.Button"
        android:layerType="none"
        android:layout_marginTop="10dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>