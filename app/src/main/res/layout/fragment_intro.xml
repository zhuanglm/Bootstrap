<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <WebView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/web_view">
    </WebView>
    <Button
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:theme="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:text="@string/start"
        android:textColor="@android:color/white"
        android:background="@color/fashion_yellow"
        android:id="@+id/button"
        android:layout_gravity="center|bottom"
        android:textSize="18sp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:text="Title Line 1"
            android:textSize="22sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="161dp"
            android:layout_y="108dp"
            android:id="@+id/titleLine1"
            android:layout_marginTop="113dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:text="Title Line 2"
            android:textSize="32sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titleLine1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:id="@+id/titleLine2" />

        <TextView
            android:text="Tag Line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titleLine2"
            android:layout_centerHorizontal="true"
            android:textSize="30sp"
            android:layout_marginTop="56dp"
            android:id="@+id/tagLine" />

        <LinearLayout
            android:id="@+id/line1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tagLine"
            android:paddingLeft="20dp"
            android:layout_marginTop="39dp">

            <TextView
                android:id="@+id/bullet1"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="@string/square"
                android:ems="10" />

            <TextView
                android:id="@+id/bulletLine1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:textSize="18sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/line2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line1"
            android:paddingLeft="20dp"
            android:layout_marginTop="39dp">

            <TextView
                android:id="@+id/bullet2"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="@string/square"
                android:ems="10" />

            <TextView
                android:id="@+id/bulletLine2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:textSize="18sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/line3"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line2"
            android:paddingLeft="20dp"
            android:layout_marginTop="39dp">

            <TextView
                android:id="@+id/bullet3"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="@string/square"
                android:ems="10" />

            <TextView
                android:id="@+id/bulletLine3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:textSize="18sp" />
        </LinearLayout>
    </RelativeLayout>



</FrameLayout>