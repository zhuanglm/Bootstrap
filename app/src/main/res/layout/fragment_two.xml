<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/xiaomi_background_color">

    <include layout="@layout/toolbar_back" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/space_features_title"
        android:textSize="20sp"
        android:id="@+id/spaceNameView"
        android:paddingStart="@dimen/fragment_text_start_padding"
        android:paddingEnd="@dimen/fragment_text_end_padding"
        android:layout_marginTop="@dimen/text_top_padding"
        />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingTop="15dp"
        android:id="@+id/listView"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:paddingStart="@dimen/fragment_text_start_padding"
        android:paddingEnd="@dimen/fragment_text_end_padding"
        android:layout_gravity="center_horizontal" />
    <Button
        android:layout_width="match_parent"
        android:text="@string/next"
        android:id="@+id/proceedButton"
        style="@style/Xiaomi.Button"
        android:layout_marginTop="10dp"/>
</LinearLayout>