<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageView"
        android:src="@drawable/bg2"
        android:scaleType="fitXY"
        android:layout_gravity="center"/>

    <LinearLayout
        android:fitsSystemWindows="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/space_features_title"
            android:textSize="28sp"
            android:id="@+id/spaceNameView"
            android:layout_marginTop="@dimen/text_top_padding"
            android:layout_marginStart="@dimen/fragment_text_start_padding"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="@dimen/fragment_text_start_padding"
            android:id="@+id/featureListText"
            android:text="@string/space_features_list"/>

    </LinearLayout>
</FrameLayout>